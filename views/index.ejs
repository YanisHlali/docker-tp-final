<!DOCTYPE html>
<html>

<head>
  <title>Accueil</title>
  <link rel="stylesheet" href="/css/style.css" />
  <script>
    function onSubmit(token) {
      document.getElementById("form-comment").submit();
    }
  </script>
</head>

<body>
  <div class="container">
    <div class="flag">
      <a href="/flag" class="btn">Flag</a>
    </div>

    <h1>Liste des commentaires</h1>
    <form id="form-comment" action="/create" method="post" enctype="multipart/form-data" class="form-comment">
      <div class="form-group">
        <textarea name="content" placeholder="Contenu" rows="4"></textarea>
      </div>
      <div class="form-group">
        <input type="file" name="image_path" />
      </div>
      <div class="form-group">
        <button data-callback="onSubmit">Poster</button>
      </div>
    </form>
    <ul class="comment-list">
      <% posts.forEach(function(post) { %>
        <li class="comment-item">
          <p>Post√© par <%= post.username %>
          </p>
          <p>
            <%= post.content %>
          </p>
          <% if (post.image_path) { %>
            <img src="<%= post.image_path %>" alt="image" class="comment-image" />
            <% } %>
              <p>
                <%= post.poster_ip %>
              </p>
        </li>
        <% }); %>
    </ul>
  </div>
</body>

</html>