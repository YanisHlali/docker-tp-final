<body>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script>
    function onSubmit(token) {
      document.getElementById("quoicoubeh").submit();
    }
  </script>
  <div class="container">
    <h1>Créer un commentaire</h1>
    <form id="quoicoubeh" action="/create" method="post" enctype="multipart/form-data" class="form-comment">

      <!-- Container vide pour le token reCAPTCHA -->
      <input type="hidden" id="recaptchaResponse" name="g-recaptcha-response">

      <div class="form-group">
        <textarea name="content" placeholder="Contenu" rows="4"></textarea>
      </div>
      <div class="form-group">
        <label for="image_path">Télécharger une image :</label>
        <input type="file" name="image_path" id="image_path" />
      </div>
      <div class="form-group">
        <button class="g-recaptcha" data-sitekey="6Lf62U4pAAAAAOfDV8AMP1lk7AbI3S7YvdTcLKbw"
          data-callback="onSubmit">Submit</button>
      </div>
    </form>
  </div>
</body>